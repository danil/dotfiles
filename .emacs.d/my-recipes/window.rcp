(my-after-init
  (global-set-key (kbd "C-c d b b") 'bury-buffer-with-repeat)
  (global-set-key (kbd "C-c d b r") 'rename-buffer)
  (global-set-key (kbd "C-c d b s") 'my-do-shell-command-on-buffer-file)
  (defun bury-buffer-with-repeat ()
    (interactive)
    (my-with-repeat-while-press-last-key
      (bury-buffer))))

(add-hook 'js-mode-hook (lambda () (setq truncate-lines t))) ;truncate lines <http://stackoverflow.com/questions/950340/how-do-you-activate-line-wrapping-in-emacs#950406>

(my-after-init
  (my-add-auto-mode-to-patterns 'js-mode
                                "\\.htc\\'" ;HTML Components (HTCs or .htc) <http://en.wikipedia.org/wiki/HTML_Components>
                                )
  (my-eval-after-load 'js (setq js-indent-level 2)))

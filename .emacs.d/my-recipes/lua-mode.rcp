(my-add-to-packages 'ample-regexps)
(my-add-to-packages 'lua-mode)

(add-hook 'lua-mode-hook (lambda () (setq truncate-lines t))) ;truncate lines <http://stackoverflow.com/questions/950340/how-do-you-activate-line-wrapping-in-emacs#950406>

(my-after-init
  (my-add-auto-mode-to-patterns 'lua-mode "\\.ws\\'")
  (my-eval-after-load 'lua-mode
    (setq lua-indent-level 2) ;<http://lua-users.org/wiki/LuaStyleGuide>, <http://stackoverflow.com/questions/4643206/how-to-configure-indentation-in-emacs-lua-mode#answer-4652043>
    ))

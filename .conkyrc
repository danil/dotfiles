# <http://ubuntuforums.org/showthread.php?t=1097133&page=3#post10452683>.
own_window yes
own_window_class Conky
own_window_transparent yes
# own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_type override

double_buffer no

# Use Xft?
# font 9x15
use_xft yes
# xftfont xft:pixelsize=14:antialias=true:hinting=true:autohint=true
xftfont Sans:size=8
xftalpha 0.8
text_buffer_size 2048
# force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

alignment top_right
background no
# number of cpu samples to average set to 1 to disable averaging
cpu_avg_samples 2
default_color gray100
# color0 gray100 #values
# color1 red #highlighted values
# default_shade_color gray100
own_window_colour grey100
draw_borders no
# draw_graph_borders yes
draw_outline no
draw_shades no
gap_x 6
gap_y 335
minimum_size 158 0
maximum_width 158
# number of net samples to average set to 1 to disable averaging
net_avg_samples 2
# subtract file system buffers from used memory?
no_buffers yes
# out_to_console no
# out_to_stderr no
# extra_newline no
stippled_borders 0
update_interval 5.0
uppercase no
# add spaces to keep things from moving about? This only affects certain objects
use_spacer none
# show_graph_scale no
# show_graph_range no

TEXT
${font}$kernel ${hr 1}
Load ${goto 54}${loadavg}
Uptime${goto 54}$uptime_short
# Battery \
# ${if_existing /proc/acpi/battery/BAT0/state discharging}${color1}${endif}${battery}
# ${time %H:%M} ${time %z}
# ${execpi 60 DJS=`date +%_d`; cal -m | sed s/"$DJS"'\b'/''"$DJS"''/ | sed 's/^/      /'}\


${if_up wlan0}wlan0 ${hr 1}
${wireless_essid wlan0}${goto 54}${wireless_link_qual_perc wlan0}%${alignr}${addr wlan0}
${goto 54}Up${alignr}Down
Speed${goto 54}${upspeed wlan0}${alignr}${downspeed wlan0}
Total${goto 54}${totalup wlan0}${alignr}${totaldown wlan0}
${endif}${if_up ppp0}ppp0 ${hr 1}
${addr ppp0}
${goto 54}Up${alignr}Down
Speed${goto 54}${upspeed ppp0}${alignr}${downspeed ppp0}
Total${goto 54}${totalup ppp0}${alignr}${totaldown ppp0}
${endif}${if_up eth0}eth0 ${hr 1}
${addr eth0}
${goto 54}Up${alignr}Down
Speed${goto 54}${upspeed eth0}${alignr}${downspeed eth0}
Total${goto 54}${totalup eth0}${alignr}${totaldown eth0}
${endif}
CPU
${cpugraph}

MEM
${memgraph}
SWAP${goto 54}$swap

HD
${diskiograph}
${goto 20}Used${goto 77}Size
/${goto 20}${fs_used /}${goto 77}${fs_size /}

PROCESSES${goto 77}CPU ${hr 1}
${top name 1}${goto 70}${top cpu 1}${alignr}${top mem_res 1}
${top name 2}${goto 70}${top cpu 2}${alignr}${top mem_res 2}
${top name 3}${goto 70}${top cpu 3}${alignr}${top mem_res 3}
${top name 4}${goto 70}${top cpu 4}${alignr}${top mem_res 4}
${top name 5}${goto 70}${top cpu 5}${alignr}${top mem_res 5}
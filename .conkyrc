# Conky settings #
background no
update_interval 1

cpu_avg_samples 2
net_avg_samples 2

double_buffer yes
no_buffers yes

text_buffer_size 2048
#imlib_cache_size 0

temperature_unit fahrenheit

# Window specifications #

own_window yes
own_window_type override
own_window_transparent yes
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below

# own_window yes
# own_window_class Conky
# own_window_transparent yes
# # own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
# own_window_type override

border_inner_margin 0
border_outer_margin 0

minimum_size 165 250
maximum_width 165


alignment tr
gap_x 35
gap_y 55

# Graphics settings #
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

# Text settings #
use_xft yes
override_utf8_locale yes
xftfont DejaVu Sans:size=8
xftalpha 0.8
uppercase no

default_color c8c8c8
color0 c8c8c8
color1 ffffff
color2 ff9980

# Lua Load  #
lua_load ~/.conky/conky_widgets.lua  ~/.conky/clock.lua  ~/.conky/text_calendar.lua  ~/.conky/clock_rings.lua
lua_draw_hook_pre conky_widgets

TEXT

${voffset 165}
${lua_parse text_calendar}
${color}${font}

$uptime_short Linux $kernel

${goto 12}${voffset 41}Load${goto 91}${voffset 4}CPU
${goto 11}${voffset 64}RAM${goto 91}Disk

${voffset 6}
${goto 13}${voffset 1}${wireless_essid wlan0}
${goto 13}${voffset 1}${addr wlan0}${goto 93}${addr ppp0}

${goto 13}${voffset 32}wlan${goto 93}ppp
${goto 13}${totalup wlan0}${goto 93}${totalup ppp0}
${goto 13}${totaldown wlan0}${goto 93}${totaldown ppp0}
${goto 94}${voffset 3}${addr eth0}
${goto 94}${voffset 44}eth
${goto 94}${totalup eth0}
${goto 94}${totaldown eth0}

${top name 1}${goto 70}${top cpu 1}${alignr}${top mem_res 1}
${top name 2}${goto 70}${top cpu 2}${alignr}${top mem_res 2}
${top name 3}${goto 70}${top cpu 3}${alignr}${top mem_res 3}
${top name 4}${goto 70}${top cpu 4}${alignr}${top mem_res 4}
${top name 5}${goto 70}${top cpu 5}${alignr}${top mem_res 5}


#!/bin/bash
install_command="pacman --sync --needed --verbose"

# Common packages.
install="$install community/emacs-nox"
install="$install core/mlocate"
install="$install core/sudo"
install="$install extra/git"
install="$install extra/htop"
install="$install extra/vim"

# Server.
install="$install extra/ntp"

# Golang.
install="$install community/go"

# Kubernetes/k8s.
install="$install community/docker"
install="$install community/kubectl"

$install_command $install || exit 1

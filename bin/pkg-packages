#!/bin/bash
remove_command="pkg remove"
install_command="pkg install"

# Common packages.
install="$install bash-completion"
install="$install tmux"
install="$install openssh"
install="$install neovim"
install="$install emacs"
install="$install git"
install="$install pwgen" # password generator
install="$install htop"
install="$install mosh" # ssh over bad/mobile network

# remove="$remove package_to_remove"

$remove_command  $remove  || exit 1
$install_command $install || exit 1

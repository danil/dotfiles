#! /bin/bash

set -e

file=$1

[[ ! -z  $file ]] && (>&2 echo 'Argument is missing') ; exit 1

if ! [[ $file = *[!\ ]* ]]; then
    (>&2 echo "Invalid argument: $file") ; exit 1
fi

if ! [ -f "./$file" ]; then
    (>&2 echo "Nothing to encrypt. File $file not found!") ; exit 1
fi

if [ -f "./$file.asc" ]; then
    mv -i "./$file.asc" "./$file.$(date +%Y%m%dT%H%M%S%Z).asc"
fi

gpg --symmetric --armor "./$file" || exit 1

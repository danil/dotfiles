#! /bin/bash

set -e

while [ $# -gt 0 ]; do
    case "$1" in
        --file=*)
            file="${1#*=}"
            ;;
        *)
            (>&2 echo 'Invalid argument')
            exit 1
    esac
    shift
done

if [[ -z  $file ]]; then
    (>&2 echo 'File name argument is missing') ; exit 1
fi

if ! [[ $file = *[!\ ]* ]]; then
    (>&2 echo "Invalid file name argument: $file") ; exit 1
fi

# if ! [ -f "./${file}.gz" ]; then
#     (>&2 echo "Nothing to encrypt. File ${file}.gz not found!") ; exit 1
# fi

find_args=(
    ./
    -maxdepth 1
    \(
        -type d
        -or -type f
        -or -type l
    \) -not \(
        -empty
        -or -size 0
        -or -name "*.tar*"
        -or -name "*.asc"
        -or -name "*.enc"
        -or -name "S.*"
        -or -name ".git*"
        -or -path ./
        -or -path "*/.gnupg/.debris/tmp/*"
    \)
)

if [[ -n $(find "${find_args[@]}") ]] ; then
    echo 'To encrypt:'
    find "${find_args[@]}"
else
    (>&2 echo "Nothing to encrypt") ; exit 1
fi

if [ -f "./${file}.tar.gz.asc" ]; then
    mv -i "./${file}.tar.gz.asc" \
          "./${file}$(date --utc +%Y%m%dT%H%M%SZ).tar.gz.asc"
fi

find "${find_args[@]}" \
    | tar --create --gzip --dereference --exclude-vcs --to-stdout --files-from - \
    > "./${file}.tar.gz"

# gpg --symmetric --armor "./${file}.tar.gz" || exit 1

read -sp "Enter passphrase: " passphrase
echo
read -sp "Re-enter passphrase: " passphrase2

if [[ "$passphrase" != "$passphrase2" ]] ; then
    echo "passphrase does not match"
    exit 1
else
    echo
fi

echo "${passphrase}" | gpg --symmetric --armor --batch --no-tty --yes --passphrase-fd 0 "./${file}.tar.gz" || exit 1

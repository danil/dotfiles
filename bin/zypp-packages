#!/bin/sh

# Serveroid packages.
install="$install flops-mon-agent"
install="$install flops-release"

# Common/user space packages.
# install="$install rpmconf" # Tool to handle rpmnew and rpmsave files
install="$install bc" # used by bash prompt, console-based calculator utility
install="$install git"
install="$install htop"
install="$install jq" # json console formater (used by emacs counsel-jq) <http://stedolan.github.io/jq/tutorial>, <http://stackoverflow.com/questions/352098/how-can-i-pretty-print-json#15231463>
install="$install lftp" # ftp client
install="$install man"
install="$install mlocate" # finding files by name
install="$install mosh" # ssh replacement
install="$install ncdu" # community/ncdu: diskspace usage is an baobab and gt5 replacement
install="$install sudo" # super user do
install="$install tig" # git interactive cli
install="$install zstd" # a-la gz/xz compression

# install="$install opensmtpd" # send mail via /usr/bin/sendmail and deliver local mail to /var/mail a-la exim

# C/C++ gcc/compiler/make and so on.
install_pattern="$install_pattern devel_C_C++" # c/c++ gcc/compiler/make and so on

# Tmux (os wide/from source).
# install="$install tmux" # a-la gnu screen, os wide installation
install="$install libevent-devel" # tmux compiltime dependencies
install="$install utempter-devel" # tmux can use the utempter library to update utmp(5)

# Emacs.
install="$install libgnutls-devel" # compiltime dependency

# Homebrew <https://docs.brew.sh/Homebrew-on-Linux>.
install_pattern="$install_pattern devel_C_C++" # c/c++ gcc/compiler/make and so on
install="$install curl"
install="$install file"
install="$install git"
install="$install procps" # ps utilities for /proc

# The Silver Searcher/ag
install="$install pcre-devel" # compiltime dependency
install="$install xz-devel" # lzma.h compiltime dependency

# Server.
install="$install bind" # lookup utility
install="$install fail2ban"
install="$install knot" # dns
install="$install pure-ftpd" # because vsftpd is annoying
install="$install mosh" # mobile shell a-la ssh

# Nginx.
install="$install apache2-utils" # provides htpasswd utility is an nginx/apach basic authentication password generator
install="$install goaccess" # analyze nginx/apache log in real-time
install="$install nginx"
install="$install python3-certbot-nginx" # nginx plugin for letâ€™s encrypt client

# Golang programming language.
install="$install go1.18"

if [ ! -z "$install_pattern" ] && [ "$install_pattern" != " " ]; then
    zypper install --type pattern --no-recommends $install_pattern || exit 1
fi

if [ ! -z "$install" ] && [ "$install" != " " ]; then
    zypper install --no-recommends $install || exit 1
fi

percentage=$(sound_volume)

# <https://wiki.archlinux.org/index.php/Desktop_notifications#Usage_in_programming>.
dunstify --replace=1 --urgency=low \
         "â™ª $(printf '%3s' ${percentage})%" \
         "$(osd_progress_bar ${percentage})"

#!/bin/bash

install_command="aptitude install"

# Compilation.
packages="$packages build-essential"
packages="$packages devscripts" # ???
packages="$packages libx11-dev"
packages="$packages libxft-dev"

# Common packages.
packages="$packages chrome-gnome-shell" # chrome/gnome extension integration
packages="$packages curl"
packages="$packages emacs26-nox"
packages="$packages git"
packages="$packages htop"
packages="$packages mosh"
packages="$packages postgresql-server-dev-11" # required by pg_activity is an postgresql activity monitoring <https://github.com/julmon/pg_activity>
packages="$packages postgresql-server-dev-9.6" # required by pg_activity is an postgresql activity monitoring <https://github.com/julmon/pg_activity>
packages="$packages pwgen" # password generator
packages="$packages silversearcher-ag"
packages="$packages tmux"
packages="$packages xsel"
# packages="$packages makepasswd" # password generator
# packages="$packages docker" # `curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add - && sudo add-apt-repository "deb arch=amd64 https://download.docker.com/linux/ubuntu bionic stable"`

# Golang.
packages="$packages golang"
packages="$packages golang-race-detector-runtime"

# Python.
packages="$packages python-pip"
packages="$packages python3-pip"

# Ruby.
# packages="$packages libssl1.0-dev" # required by ruby 2.3.7 (libssl1.0-dev conflicts with libssl-dev)
packages="$packages libreadline-dev" # required by ruby 2.6.3
packages="$packages libsqlite3-dev" # required by sqlite3 which required by mailcatcher
packages="$packages libssl-dev" # required by ruby 2.6.3 (libssl-dev conflicts with libssl1.0-dev)

# Desktop.
# packages="$packages xcalib" # returns: "Error - unsupported ramp size 0" (load icc/icm display color profiles (only calibration curves) <https://wiki.archlinux.org/index.php/ICC_Profiles#xcalib>)
packages="$packages gnome-shell-extension-impatience" # speed up the gnome-shell animation speed
packages="$packages gnome-shell-extension-move-clock" # move clock extension for GNOME shell

packages="$packages argyll" # load icc/icm display color profiles <https://wiki.archlinux.org/index.php/ICC_Profiles#Argyll_CMS>
packages="$packages duplicity" # backuping
packages="$packages fonts-fantasque-sans"
packages="$packages gnome-tweak-tool"

# Suckless (dwm and so on and suckless dependencies/requirements)
packages="$packages build-essential" # suckless dependency
packages="$packages libx11-dev" # suckless dependency
packages="$packages libxinerama-dev" # suckless dependency
packages="$packages sharutils" # suckless dependency
packages="$packages stterm" # st
packages="$packages suckless-tools" # suckless dependency

# Yaru community theme <https://github.com/ubuntu/yaru>,
# <https://itsfoss.com/ubuntu-community-theme>.
packages="$packages ubuntu-communitheme-session"

# Docker
# <https://docs.docker.com/install/linux/docker-ce/ubuntu>.
packages="$packages apt-transport-https" # required by docker ppa <https://docs.docker.com/install/linux/docker-ce/ubuntu>
packages="$packages ca-certificates" # required by docker ppa <https://docs.docker.com/install/linux/docker-ce/ubuntu>
packages="$packages docker-ce"
packages="$packages software-properties-common" # required by docker ppa <https://docs.docker.com/install/linux/docker-ce/ubuntu>

# Employer Rocketbank.
packages="$packages apt-transport-https" # required by elasticsearch ppa <https://www.elastic.co/guide/en/elasticsearch/reference/current/deb.html#deb-repo>
packages="$packages elasticsearch" # felix `deb https://artifacts.elastic.co/packages/5.x/apt stable main` elasticsearch 5 <https://www.elastic.co/guide/en/elasticsearch/reference/current/deb.html>
packages="$packages glide" # go/german `add-apt-repository ppa:masterminds/glide` golang glide vendor package management <https://github.com/Masterminds/glide>
packages="$packages golang"
packages="$packages kubectl" # `deb https://apt.kubernetes.io/ kubernetes-xenial main` <https://kubernetes.io/docs/tasks/tools/install-kubectl>
packages="$packages libmagickwand-dev" # required by rmagick by felix
packages="$packages network-manager-vpnc-gnome" # cisco vpn client plugin for the gnome
packages="$packages openconnect" # alternative vpn
packages="$packages postgresql-11" # `deb http://apt.postgresql.org/pub/repos/apt/ bionic-pgdg main` <https://www.postgresql.org/download/linux/ubuntu>
packages="$packages postgresql-9.6"  # felix `deb http://apt.postgresql.org/pub/repos/apt/ bionic-pgdg main` <https://www.postgresql.org/download/linux/ubuntu>
packages="$packages redis" # felix
packages="$packages vpnc" # cisco vpn client

# # Benchmarks a-la `ab`.
# packages="$packages bonnie++"
# packages="$packages apache2-utils"
# packages="$packages dbench"
# packages="$packages siege"
# packages="$packages sysbench" # cpu and memory benchmarks
# packages="$packages tiobench" # TODO: find this package
# packages="$packages wrk" # c http benchmark tool <https://github.com/wg/wrk>

$install_command $packages || exit 1

#! /bin/bash
# Running several applications from ~/.xinitrc
# <https://wiki.archlinux.org/index.php/ConsoleKit#Running_several_applications_from_.7E.2F.xinitrc>.

xset b off         #turn off bell
xset r rate 300 30 #keyboard auto repeat parameters
xset dpms 420      #suspend monitor after 7 minutes <https://wiki.archlinux.org/index.php/i3#Screensaver_and_power_management>

if [[ `hostname -s` == 'h3' ]]; then
    if hash argyll-dispwin 2>/dev/null; then
        argyll-dispwin ~/t400s_082409.icm &
    elif hash dispwin 2>/dev/null; then
        dispwin ~/t400s_082409.icm &
    fi
fi

xautolock -time 10 -locker 'i3lock --dpms -c 000000' & #lock screen after 10 minutes
feh --bg-center ~/local/share/backgrounds/gentoo-znurt-larry-abducted-1440x900.png &
# urxvtd --fork --quiet
unclutter & #hide mouse cursor after while
xxkb & #keyboard layout indicator for tray

#! /bin/bash
# Running several applications from ~/.xinitrc
# <https://wiki.archlinux.org/index.php/ConsoleKit#Running_several_applications_from_.7E.2F.xinitrc>.

killall nautilus ; dbus-launch nautilus --no-default-window &
if [[ `hostname -s` == "leela" ]]; then
    argyll-dispwin ~/t400s_082409.icm &
fi
killall tint2 ; tint2 &
killall parcellite ; parcellite &
# killall glipper ; glipper &
# killall volumeicon ; dbus-launch volumeicon &
killall volti ; dbus-launch volti &
# killall gnome-power-manager; dbus-launch gnome-power-manager &
killall xfce4-power-manager ; dbus-launch xfce4-power-manager &
killall wicd-gtk ; dbus-launch wicd-gtk --tray &
killall conky ; conky -c ~/.conky/conkyrc_calendar & conky -c ~/.conky/conkyrc_top & conky -c ~/.conky/conkyrc_clock_2 &
# killall avant-window-navigator ; dbus-launch avant-window-navigator &
killall cairo-dock ; dbus-launch cairo-dock &
# killall empathy ; dbus-launch empathy &
killall gajim ; dbus-launch gajim &
killall stardict ; stardict &
killall screenletsd ; screenletsd --cli run ClearCalendar & screenletsd --cli run ClearWeather & screenletsd --cli run Calc &


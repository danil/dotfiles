background no
update_interval 5.0

# number of cpu samples to average set to 1 to disable averaging
cpu_avg_samples 2
# number of net samples to average set to 1 to disable averaging
net_avg_samples 2

double_buffer yes
# subtract file system buffers from used memory?
no_buffers yes
# out_to_console no
# out_to_stderr no
# extra_newline no
# stippled_borders 0
# add spaces to keep things from moving about? This only affects certain objects
# use_spacer none
# show_graph_scale no
# show_graph_range no

text_buffer_size 2048
#imlib_cache_size 0

temperature_unit fahrenheit

# Window specifications #

own_window yes
# own_window_class Conky
own_window_type override
own_window_transparent yes
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below

border_inner_margin 0
border_outer_margin 0

minimum_size 165 760
maximum_width 165

alignment tr
gap_x 35
gap_y 55

# Graphics settings #
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

# Text settings #
# font 9x15
use_xft yes
# force UTF8? note that UTF8 support required XFT
override_utf8_locale yes
xftfont DejaVu Sans:size=8
# xftfont xft:pixelsize=14:antialias=true:hinting=true:autohint=true
xftalpha 0.8
uppercase no

default_color c8c8c8
color0 c8c8c8
color1 ffffff
color2 ff9980

# Lua Load  #
lua_load ~/.conky/conky_widgets.lua  ~/.conky/clock.lua  ~/.conky/text_calendar.lua  ~/.conky/clock_rings.lua
lua_draw_hook_pre conky_widgets

TEXT
${voffset 165}
${alignc}${time %B}
${lua_parse text_calendar}

${color}${font}${alignc}${voffset 5}$uptime_short $kernel

${goto 12}${voffset 64}Load${goto 91}${voffset 4}CPU
${goto 11}${voffset 64}MEM${goto 91}Disk

${goto 13}${voffset 39}${wireless_essid wlan0}
${goto 13}${voffset 1}${addr wlan0}${goto 93}${addr ppp0}

${goto 13}${voffset 27}wlan${goto 93}ppp
${goto 13}${totalup wlan0}${goto 93}${totalup ppp0}
${goto 13}${totaldown wlan0}${goto 93}${totaldown ppp0}
${goto 13}${voffset 14}${addr eth0}
${goto 13}${voffset 39}eth
${goto 13}${totalup eth0}
${goto 13}${totaldown eth0}

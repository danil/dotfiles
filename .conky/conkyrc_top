background no
update_interval 10.0

# number of cpu samples to average set to 1 to disable averaging
cpu_avg_samples 2
# number of net samples to average set to 1 to disable averaging
net_avg_samples 2

double_buffer yes
# subtract file system buffers from used memory?
no_buffers yes
# out_to_console no
# out_to_stderr no
# extra_newline no
# stippled_borders 0
# add spaces to keep things from moving about? This only affects certain objects
# use_spacer none
# show_graph_scale no
# show_graph_range no

text_buffer_size 2048
#imlib_cache_size 0

temperature_unit fahrenheit

# Window specifications #
# <http://conky.sourceforge.net/config_settings.html>.
own_window yes
# own_window_class Conky
# own_window_type override #with nautilus desktop
own_window_type normal #without nautilus desktop
own_window_transparent yes
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below

border_inner_margin 0
border_outer_margin 0

minimum_size 165 400
maximum_width 165

alignment tr
gap_x 250
gap_y 415

# Graphics settings #
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

# Text settings #
# font 9x15
use_xft yes
# force UTF8? note that UTF8 support required XFT
override_utf8_locale yes
xftfont DejaVu Sans:size=8
# xftfont xft:pixelsize=14:antialias=true:hinting=true:autohint=true
xftalpha 0.8
uppercase no

default_color b6b6b6


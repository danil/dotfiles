! This file is part of Danil Kutkevich <danil@kutkevich.org> home.
! `xrdb -load ~/.Xresources`,
! `xrdb -remove`,
! `xrdb -merge ~/.Xresources`.

! Cursor disappears with compiz and Xft font <http://bbs.archlinux.org/viewtopic.php?pid=991221>.
! *cursorUnderline: true
*cursorBlink:     false
! Dark theme.
*cursorColor:     #ff0000
! ! White theme.
! *cursorColor:     #aa0000
*cursorUnderline: false
! Get width and height of a terminal window: `tput cols` and `tput lines`
! <http://stackoverflow.com/questions/263890/how-do-i-find-the-width-height-of-a-terminal-window#263900>.
*geometry:        87x54
*saveLines:       10000

! Xft <https://wiki.archlinux.org/index.php/Font_Configuration#Applications_without_fontconfig_support>.
! Antialias <https://wiki.archlinux.org/index.php/Font_Configuration#Anti-aliasing>.
Xft.antialias: 1
! Autohint <http://wiki.gentoo.org/wiki/Fontconfig#Regarding_autohinter>.
Xft.autohint:  0
! Hinting <https://wiki.archlinux.org/index.php/Font_Configuration#Byte-Code_Interpreter_.28BCI.29>.
Xft.hinting:   1
! Hintstyle <https://wiki.archlinux.org/index.php/Font_Configuration#Hint_style>,
! <http://wiki.gentoo.org/wiki/Fontconfig#Forcing_hinting>.
Xft.hintstyle: hintfull
! Lcd filter <http://wiki.gentoo.org/wiki/Fontconfig#Using_sub-pixel_rendering>,
! <https://wiki.archlinux.org/index.php/Font_Configuration#LCD_filter>.
Xft.lcdfilter: lcddefault
! Sub-pixel rendering <http://wiki.gentoo.org/wiki/Fontconfig#Using_sub-pixel_rendering>,
! <https://wiki.archlinux.org/index.php/Font_Configuration#Subpixel_rendering>.
Xft.rgba:      rgb
! ! DPI <https://wiki.archlinux.org/index.php/Font_Configuration#Distorted_fonts>.
! Xft.dpi:       120.4

! *font: -misc-fixed-medium-r-normal--18-120-100-100-c-90-iso10646-1,\
!             -misc-fixed-medium-r-normal--8-80-75-75-c-50-iso10646-1,\
!             -misc-fixed-medium-r-normal--8-80-75-75-c-50-iso10646-1,\
!             -misc-fixed-medium-r-normal--14-130-75-75-c-70-iso10646-1,\
!             -misc-fixed-medium-r-normal--13-120-75-75-c-80-iso10646-1
! *font: xft:DejaVu Sans Mono:pixelsize=12:antialias=true:hinting=true:autohint=true
! <http://askubuntu.com/questions/22419/how-do-i-make-urxvt-render-xft-fonts#96779>.
*font: xft:PragmataPro:pixelsize=13:antialias=true:hinting=true:autohint=true:style=regular

! <https://wiki.archlinux.org/index.php/X11_Cursors>.
Xcursor.theme: Vanilla-DMZ
! Xcursor.size: 48


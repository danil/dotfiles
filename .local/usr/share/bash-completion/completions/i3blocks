_i3blocks()
{
	local cur prev words cword
	_init_completion || return

	case $prev in
	-c)
		_filedir
		return
		;;
	-o)
		COMPREPLY=( $( compgen -W "term" -- "$cur" ) )
		return
		;;
	esac

	COMPREPLY=( $( compgen -W "-c -o -v -h -V" -- "$cur" ) )
	return
} &&
complete -F _i3blocks i3blocks

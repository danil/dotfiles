[user]
	email = danil@kutkevich.org
	name = Danil Kutkevich

[diff]
	renameLimit = 16384

[merge]
	renamelimit = 16384

[safe]
	directory = /
	directory = /etc
	directory = /root/example
	directory = /root/.ssh

# [color]
#     diff = always
#     ui = true
# [diff]
# 	external = meld

# Global .gitignore
# <https://help.github.com/articles/ignoring-files#global-gitignore>,
# <http://stackoverflow.com/questions/7335420/global-git-ignore#7335487>.
# Emacs eshell <https://hexmode.com/2016/05/making-git-and-emacs-eshell-work-together>.
[core]
  # Committing only a file's permissions
  # <https://stackoverflow.com/questions/10516201/updating-and-committing-only-a-files-permissions-using-git-version-control#10516406>.
  filemode = true
	excludesfile = ~/.gitignore.global
	editor = emacs
	pager = `test \"$TERM\" = \"dumb\" && echo cat || echo less --IGNORE-CASE --LONG-PROMPT`

[url "git@github.com:danil/"]
	insteadOf = https://github.com/danil/

# <https://git-scm.com/docs/git-config#Documentation/git-config.txt-codegitdircode>.

[includeIf "gitdir:~/**vendor/wbr/"]
  path = ~/.gitconfig.wbr.local


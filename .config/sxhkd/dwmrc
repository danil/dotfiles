# "ctrl+t" replaying hack.
control + t ; t
    bash -c "killall sxhkd && xdotool key ctrl+t && xdotool key ctrl+t && sxhkd -c $HOME/.config/sxhkd/dwmrc"

control + t : v : {j,k,m,u}
    { \
        audio-volume-down && osd-sound-volume, \
        audio-volume-up && osd-sound-volume, \
        amixer sset Master mute && osd-sound-volume, \
        amixer sset Master unmute && osd-sound-volume
    }

# dwm tags.
control + t ; {0-9}
    echo -n view{0-9} > /tmp/dwm.fifo
control + t ; w ; {0-9}
    echo -n tag{0-9} > /tmp/dwm.fifo

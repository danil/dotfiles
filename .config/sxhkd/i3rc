# This file is part of Danil <danil@kutkevich.org> home.

# "ctrl+t" replaying hack.
control + t ; t
    sh -c "killall sxhkd && xdotool key ctrl+t && xdotool key ctrl+t && sxhkd -c $HOME/.config/sxhkd/i3rc"


# Clear notifications.
control + t ; g
    dunstctl close-all

# Terminal emulator.
control + t ; c
    alacritty

control + t ; shift + 1
    ~/bin/dmenu --command="/home/danil/.local/usr/local/bin/dmenu" --lines=27 --history="dmenu_history"

control + t ; u ; shift + 1
    i3-desktop

# Invert colors on xorg/xrandr.
control + t ; i
    xcalib -i -a

# Lock.
control + t ; l
    i3-lock
control + t ; u ; l
    i3-lock && i3-sleep

# Dim screen backlight or sleep/suspend.
control + t ; s
    i3-sleep
control + t ; u ; s
    sleep 0.1 && xset dpms force off

# Screen shots.
control + t ; p ; p
    maim ~/Pictures/Screenshots/screenshot-$(date +%Y%m%d%H%M%S).png # xfce4-screenshooter # shutter -s # import ~/tmp/screenshot.png # screenshot
control + t ; p ; s
    maim --select ~/Pictures/Screenshots/screenshot-$(date +%Y%m%d%H%M%S).png # xfce4-screenshooter # shutter -s # import ~/tmp/screenshot.png # screenshot

# Sound volume (alsa)
# <http://wiki.gentoo.org/wiki/Xfce#Keyboard_shortcuts>,
# <https://wiki.archlinux.org/index.php/Xbindkeys#Xbindkeysrc>.
control + t ; v : {j,k,m,u}
    { \
        audio-volume-down && osd-sound-volume, \
        audio-volume-up && osd-sound-volume, \
        amixer sset Master mute && osd-sound-volume, \
        amixer sset Master unmute && osd-sound-volume
    }
XF86AudioLowerVolume
    audio-volume-down && osd-sound-volume
XF86AudioMute
    audio-mute && osd-sound-volume
XF86AudioRaiseVolume
    audio-volume-up && osd-sound-volume

# Screen backlight (xbacklight)
# <https://wiki.archlinux.org/index.php/backlight#xbacklight>.
control + t ; b : {j,k}
    { \
        screen-backlight-down && osd-screen-backlight, \
        screen-backlight-up && osd-screen-backlight
    }
XF86MonBrightnessDown
    screen-backlight-down && osd-screen-backlight
XF86MonBrightnessUp
    screen-backlight-up && osd-screen-backlight

# A-la compiz scale/gnome overview/osx expose.
control + t ; w ; w ; w
    skippy-xd # skippy-xd --activate-window-picker

# Window manager.
control + t ; w ; c
    i3-msg kill
control + t ; w ; w ; c
    i3-msg reload
control + t ; w ; w ; r
    i3-msg restart


# i3 tags.
control + t ; {0-9}
    i3-msg workspace {0-9}
control + t ; w ; {1-9}
    i3-msg move container to workspace {1,9}

# dwm toggle layout.
control + t ; w ; u ; w
    xdotool key super+space

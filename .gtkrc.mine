# <https://wiki.archlinux.org/index.php/GTK%2B>.
gtk-icon-theme-name = "Faenza-Dark"

# Font
style "myfont" {
    font_name = "Sans 12"
}
widget_class "*" style "myfont"
gtk-font-name = "Sans 12"

# <https://wiki.xfce.org/howto/xfwm4_theme#gtk_color_pickup>.
style "dacobr" {
    bg[INSENSITIVE] = "DeepSkyBlue4"
    bg[SELECTED] = "#000000"
}
widget "xfwm" style "dacobr"
